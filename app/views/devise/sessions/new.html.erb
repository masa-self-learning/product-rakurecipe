<% provide(:title, "ログイン") %>

<div class="global-container">
  <h1 class="main__title pt-sm">ログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form") do |f| %>
    <div class="field form__inner">
      <%= f.label :email, "メールアドレス", class: "form__label" %>
      <%= f.email_field :email, class: "form__input", autofocus: true, autocomplete: "email", placeholder: "例：recipe@example.com" %>
    </div>

    <div class="field form__inner">
      <%= f.label :password, "パスワード", class: "form__label" %>
      <%= f.password_field :password, class: "form__input", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn--submit" %>
    </div>
  <% end %>
</div>