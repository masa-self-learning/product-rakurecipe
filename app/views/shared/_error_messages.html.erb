<%# ユーザー情報エラー %>
<% if @user && @user.errors.any?%>
  <div id="error_explanation">
    <div class="alert">
      入力内容に<%= @user.errors.count %>個のエラーがあります。
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

